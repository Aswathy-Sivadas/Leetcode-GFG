class Solution {
    public int aggressiveCows(int[] stalls, int k) {
        Arrays.sort(stalls);
        int low=1,high=(stalls[stalls.length-1]-stalls[0]),min=0;
        
        while(low<=high)
        {
            int mid=(low+high)/2,i=0;
            //cow always got the first position, so simply put c=1
            int c=1;
            for(int j=1;j<stalls.length;j++)
            {
                if((stalls[j]-stalls[i])>=mid)
                {
                    c++;
                    i=j;
                }
            }
            if(c>=k)
            {
                low=mid+1;
                min=mid;
            }
            else{
                high=(mid-1);
            }
            
        }
        return min;
        
    }
}
