class Solution {
    public int splitArray(int[] nums, int k) {
        int low=0,high=0;
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]>low)low=nums[i];
            high+=nums[i];
        }
        int min=0;
        while(low<=high)
        {
            int mid=(low+high)/2,c=1,sum=0;
            for(int i=0;i<nums.length;i++)
            {
                sum+=nums[i];
                if(sum>mid)
                {
                    c++;
                    sum=nums[i];
                }
            }
            if(c<=k)
            {
                min=mid;
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return min;
    }
}
